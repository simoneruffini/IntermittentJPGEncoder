{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "check format",
      "type": "shell",
      "command": "vsg --style jcl -c \"${workspaceFolder}/.vscode/vsg-cnfg.json\" -ap -f ${file}",
    },
    {
      "label": "fix format",
      "type": "shell",
      "command": "vsg --style jcl -c \"${workspaceFolder}/.vscode/vsg-cnfg.json\" -ap -f ${file} --fix",
    }
  ]
}